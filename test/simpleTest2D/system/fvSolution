FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        //solver          GAMG;
        //smoother        GaussSeidel;
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-9;
        relTol          0.001;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "(rho|U|k|omega|e|h|nuTilda)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0.1;
    }

    "(V|A)"
    {
        solver          PBiCGStab;
        preconditioner  DIC;
        tolerance       1e-6;
        relTol          0.1;
    }

    "(rho|U|k|omega|e|h|nuTilda)Final"
    {
        $U;
        relTol          0;
    }

    "(V|A)Final"
    {
        $V;
        relTol          0;
    }
}


PIMPLE
{
    consistent      yes;
    transonic       yes;
    nCorrectors              3;
    nNonOrthogonalCorrectors 0;
// at least 2 outer loop to correct sigma and use the real value after updated T 
//aggiungi schema loop pimple algorithm
    nOuterCorrectors         3;
    //pMinFactor      0.1;
    //pMaxFactor      2;
    outerCorrectorResidualControl
    {
        ".*"
        {
            relTol 1e-3;
            tolerance 2e-3;
        }
    }
}

relaxationFactors
{
    fields
    {
        ",*"     1;
    }
    equations
    {
        ".*"     1;
    }
}

